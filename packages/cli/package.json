{
  "name": "@codemcp/skills",
  "version": "0.1.0",
  "description": "Command-line interface for Agent Skills management",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "skills": "./bin/cli.mjs",
    "add-skill": "./bin/cli.mjs"
  },
  "files": [
    "dist",
    "bin",
    "README.md",
    "ThirdPartyNoticeText.txt"
  ],
  "scripts": {
    "build": "obuild",
    "generate-licenses": "node --loader tsx scripts/generate-licenses.ts",
    "dev": "node --loader tsx src/cli.ts",
    "exec:test": "node --loader tsx scripts/execute-tests.ts",
    "prepublishOnly": "npm run build",
    "format": "prettier --write 'src/**/*.ts' 'scripts/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts' 'scripts/**/*.ts'",
    "prepare": "husky",
    "test": "vitest",
    "type-check": "tsc --noEmit"
  },
  "lint-staged": {
    "src/**/*.ts": "prettier --write",
    "scripts/**/*.ts": "prettier --write",
    "tests/**/*.ts": "prettier --write"
  },
  "dependencies": {
    "@codemcp/skills-core": "workspace:*"
  },
  "devDependencies": {
    "@clack/prompts": "^0.11.0",
    "@types/node": "^22.10.0",
    "gray-matter": "^4.0.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "obuild": "^0.4.22",
    "picocolors": "^1.1.1",
    "prettier": "^3.8.1",
    "simple-git": "^3.27.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17",
    "xdg-basedir": "^5.1.0"
  },
  "keywords": [
    "agentskills",
    "cli",
    "skills-management"
  ],
  "author": "Oliver JÃ¤gle <github@beimir.net>",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  }
}
